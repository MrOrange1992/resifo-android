<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wohnsitz1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.reservoirdogs.resifo_android.Wohnsitz1Activity">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtViewHeadingWohnsitz1"
        android:maxLines="2"
        android:lines="2"
        android:text="Anmeldung der Unterkunft in"
        android:textAlignment="center"
        android:layout_height="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewStreet"
                android:maxLines="2"
                android:lines="2"
                android:text="Straße"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextStreet"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewHouse"
                android:maxLines="2"
                android:lines="2"
                android:text="Hausnummer:"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextHouse"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewStairs"
                android:maxLines="2"
                android:lines="2"
                android:text="Stiege:"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextStairs"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewDoor"
                android:maxLines="2"
                android:lines="2"
                android:text="Tür:"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextDoor"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewPLZ"
                android:maxLines="2"
                android:lines="2"
                android:text="PLZ:"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextPLZ"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewVillage"
                android:maxLines="2"
                android:lines="2"
                android:text="Ort:"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextVillage"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewState"
                android:maxLines="2"
                android:lines="2"
                android:text="Bundesland:"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextState"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewStateMainResidence"
                android:maxLines="2"
                android:lines="2"
                android:text="Hauptwohnsitz"
                android:textAlignment="center"
                android:layout_height="20dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:text="Ja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonMainResidenceYes"
                    android:layout_weight="1"
                    android:checked="true"
                    android:elevation="24dp" />

                <RadioButton
                    android:text="Nein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonMainResidenceNo"
                    android:layout_weight="1" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingTop="20dp">


            <Button
                android:layout_width="20dp"
                android:id="@+id/btnCurrentLocation"
                android:background="@drawable/map_button"
                android:layout_weight="4"
                android:layout_height="40dp" />

            <Button
                android:text="Weiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="continueTo"
                android:id="@+id/btnContinue"
                android:paddingTop="0dp"
                android:background="@drawable/roundbutton"
                android:layout_weight="1"
                android:layout_marginLeft="30dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

