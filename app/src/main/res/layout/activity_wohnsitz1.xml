<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wohnsitz1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.reservoirdogs.resifo_android.Wohnsitz1Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:text="Anmeldung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtnAnmeldung"
                    android:layout_weight="1"
                    android:checked="true" />

                <RadioButton
                    android:text="Abmeldung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtnAbmeldung"
                    android:layout_weight="1" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewStreet"
                android:maxLines="2"
                android:lines="2"
                android:text="Straße"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextStreet"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewHouse"
                android:maxLines="2"
                android:lines="2"
                android:text="Hausnummer:"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="numberSigned"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextHouse"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewStairs"
                android:maxLines="2"
                android:lines="2"
                android:text="Stiege:"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="numberSigned"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextStairs"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewDoor"
                android:maxLines="2"
                android:lines="2"
                android:text="Tür:"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="numberSigned"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextDoor"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewPLZ"
                android:maxLines="2"
                android:lines="2"
                android:text="PLZ:"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="numberSigned"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextPLZ"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewVillage"
                android:maxLines="2"
                android:lines="2"
                android:text="Ort:"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextVillage"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewState"
                android:maxLines="2"
                android:lines="2"
                android:text="Bundesland:"
                android:textAlignment="center"
                android:layout_height="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextState"
                android:layout_weight="1"
                android:layout_height="45dp" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:text="Hauptwohnsitz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtnMainResidence"
                    android:layout_weight="1"
                    android:checked="true"
                    android:elevation="24dp" />

                <RadioButton
                    android:text="Nebenwohnsitz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtnSideResidence"
                    android:layout_weight="1" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingTop="20dp">


            <Button
                android:id="@+id/btnCurrentLocation"
                android:background="@drawable/map_button"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:onClick="getAddress" />

            <Button
                android:text="Weiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="continueTo"
                android:id="@+id/btnContinue"
                android:paddingTop="0dp"
                android:background="@drawable/roundbutton"
                android:layout_weight="0"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

